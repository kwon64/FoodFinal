<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="blackDAO">

<select id="listAll" resultType="blacklist">
		SELECT * FROM blacklist

</select>

<select id="allCount" resultType="int">
		SELECT COUNT(*) FROM blacklist
</select>

	<!-- 전체출력 & 검색출력 -->
	<!-- 블랙 리스트 -->
<select id="selectBoard" parameterType="hashmap" resultType="blacklist">
	SELECT * 
		FROM (
			SELECT ROWNUM RN, A.* 
				FROM (
						SELECT * 
						FROM blacklist 
						<where>
							<if test='searchType!=null &amp;&amp; keyword!=null'>${searchType} like '%'||#{keyword}||'%'</if>
						</where>
						ORDER BY ROWNUM DESC 
						) A
				)
	WHERE RN BETWEEN #{start} AND #{end}
	
</select>

<!-- 검색된 회원 숫자 -->
<select id="searchCount" parameterType="hashmap" resultType="int">
	SELECT COUNT(*) FROM blacklist
	<where>
		<if test='searchType!=null &amp;&amp; keyword!=null'>${searchType} like '%'||#{keyword}||'%'</if>
	</where>
</select>

<!-- 블랙리스트 삭제 -->
<delete id="blackDelete" parameterType="blacklist">
		Delete From blacklist WHERE b_id=#{b_id}
</delete>


</mapper>